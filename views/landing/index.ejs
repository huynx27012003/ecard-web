  <style>
    :root {
      --primary-blue: #012596;
      --primary-blue-dark: #011d78;
      --primary-blue-light: #0a3cff;
      --accent-red: #CC0514;
      --accent-red-soft: rgba(204, 5, 20, 0.08);
    }

    /* Primary Blue Theme */
    .bg-primary-blue {
      background-color: var(--primary-blue) !important;
    }

    .text-primary-blue {
      color: var(--primary-blue) !important;
    }

    .fill-primary-blue {
      fill: var(--primary-blue) !important;
    }

    .hover\:bg-primary-dark:hover {
      background-color: var(--primary-blue-dark) !important;
    }

    .shadow-primary-volume {
      box-shadow: 0 10px 25px rgba(1, 37, 150, 0.35) !important;
    }

    /* Accent Red - used sparingly */
    .hover\:border-accent-red:hover {
      border-color: var(--accent-red) !important;
    }

    .text-accent-red {
      color: var(--accent-red) !important;
    }

    /* Gradient Text */
    .text-gradient-primary {
      background: linear-gradient(135deg, var(--primary-blue), var(--primary-blue-light));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Hero Section Styles */
    .hero-section {
      min-height: calc(100vh - 80px);
      display: flex;
      align-items: center;
      background: linear-gradient(180deg, #f8faff 0%, #ffffff 100%);
    }

    .dark .hero-section {
      background: linear-gradient(180deg, #1a1a2e 0%, #16162a 100%);
    }

    .hero-image-placeholder {
      width: 100%;
      max-width: 500px;
      aspect-ratio: 4/3;
      background: linear-gradient(135deg, rgba(1, 37, 150, 0.05) 0%, rgba(1, 37, 150, 0.1) 100%);
      border: 2px dashed rgba(1, 37, 150, 0.2);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--primary-blue);
      font-size: 14px;
      text-align: center;
      padding: 20px;
    }

    .dark .hero-image-placeholder {
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.02) 0%, rgba(255, 255, 255, 0.05) 100%);
      border-color: rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.5);
    }

    /* Button Styles */
    .btn-login {
      display: inline-flex;
      align-items: center;
      padding: 10px 24px;
      background-color: var(--primary-blue);
      color: white;
      font-weight: 600;
      font-size: 14px;
      border-radius: 50px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(1, 37, 150, 0.25);
    }

    .btn-login:hover {
      background-color: var(--primary-blue-dark);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(1, 37, 150, 0.35);
    }

    .btn-start {
      display: inline-flex;
      align-items: center;
      padding: 16px 36px;
      background-color: var(--primary-blue);
      color: white;
      font-weight: 600;
      font-size: 16px;
      border-radius: 50px;
      transition: all 0.3s ease;
      box-shadow: 0 8px 25px rgba(1, 37, 150, 0.3);
    }

    .btn-start:hover {
      background-color: var(--primary-blue-dark);
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(1, 37, 150, 0.4);
    }

    /* Footer */
    .footer-simple {
      padding: 24px 0;
      text-align: center;
      border-top: 1px solid rgba(1, 37, 150, 0.1);
    }

    .dark .footer-simple {
      border-top-color: rgba(255, 255, 255, 0.1);
    }

    /* Responsive */
    @media (max-width: 1024px) {
      .hero-content {
        text-align: center;
      }

      .hero-image-placeholder {
        max-width: 400px;
        margin: 0 auto;
      }
    }

    @media (max-width: 640px) {
      .hero-title {
        font-size: 2rem !important;
        line-height: 1.2 !important;
      }

      .hero-subtitle {
        font-size: 1rem !important;
      }

      .btn-start {
        padding: 14px 28px;
        font-size: 14px;
      }

      .hero-image-placeholder {
        max-width: 300px;
        aspect-ratio: 1/1;
      }
    }
  </style>
</head>

