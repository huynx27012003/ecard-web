<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <% const getField=(name)=> (bcard.templateFields.find(f => f.fieldName === name) || {}).fieldValue || '';
        const companyMeta = typeof companyData !== 'undefined' ? companyData : null;
        const companyName = getField('Company') || (companyMeta && (companyMeta.fullName || companyMeta.name)) || 'AT Energy';
        const companyShortName = companyMeta && companyMeta.name ? companyMeta.name : companyName;
        const companyLogo = (companyMeta && companyMeta.logo) ? companyMeta.logo : '/public/assets/AT-Energy-Logo-1024x200.png';
        const name = getField('Name') || user.username;
        const role = getField('Role');
        const mobile = getField('Phone1') || user.number;
        const hotline = getField('Phone2');
        const email = getField('ContactEmail') || user.email;
        const address = getField('Address');
        const website = getField('URL') || 'https://at-energy.vn';
        const videoUrl = getField('VideoURL');
        const imgFit = getField('ImageFit') || 'cover';
        const imgPos = getField('ImagePos') || '50';
        const resolvedCardSlug = (typeof cardSlug !== 'undefined' && cardSlug) ? cardSlug : user.username;
        const cardUrl = `${typeof serverIp !== 'undefined' ? 'http://' + serverIp + ':3000' :
        ''}/card/${resolvedCardSlug}`;
        const cardImage = bcard.Image || '/public/assets/default-avatar.png';
        const normalizePlatform = (platform) => {
            if (!platform) return '';
            return platform.toString().trim().toLowerCase().replace(/[^a-z0-9]/g, '');
        };
        const rawSocialLinks = Array.isArray(bcard.socialLinks)
            ? bcard.socialLinks
            : Object.entries(bcard.socialLinks || {}).map(([platform, url]) => ({ platform, url }));
        const socialLinks = rawSocialLinks
            .map(link => ({
                platform: normalizePlatform(link.platform),
                originalPlatform: link.platform ? link.platform.toString().trim() : '',
                url: link.url ? link.url.toString().trim() : ''
            }))
            .filter(link => link.url);
        const socialLabelMap = {
            facebook: 'Facebook',
            linkedin: 'LinkedIn',
            zalo: 'Zalo',
            tiktok: 'TikTok',
            instagram: 'Instagram',
            youtube: 'YouTube',
            website: 'Website'
        };
        const socialNoteSegments = socialLinks.map(link => `\\n${socialLabelMap[link.platform] || link.originalPlatform || 'Link'}: ${link.url}`);
        const socialNoteText = socialNoteSegments.join('');
        %>

        <!-- Primary Meta Tags -->
        <title>
            <%= name %> - <%= role ? role + ' | ' : '' %>
                    <%= companyName %> | AT Digital Card
        </title>
        <meta name="title" content="<%= name %> - <%= companyName %> | AT Digital Card">
        <meta name="description"
            content="<%= name %><%= role ? ', ' + role : '' %> tại <%= companyName %>. Liên hệ: <%= mobile %>. Địa chỉ: <%= address %>">
        <meta name="author" content="<%= name %>">
        <meta name="robots" content="index, follow">
        <link rel="canonical" href="<%= cardUrl %>">
        <link rel="shortcut icon" href="/public/assets/icon.ico">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="profile">
        <meta property="og:url" content="<%= cardUrl %>">
        <meta property="og:title" content="<%= name %> - <%= companyName %>">
        <meta property="og:description" content="<%= role ? role + ' - ' : '' %>Liên hệ: <%= mobile %> | <%= email %>">
        <meta property="og:image" content="<%= cardImage %>">
        <meta property="og:site_name" content="AT Digital Card">
        <meta property="og:locale" content="vi_VN">

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:url" content="<%= cardUrl %>">
        <meta name="twitter:title" content="<%= name %> - <%= companyName %>">
        <meta name="twitter:description" content="<%= role ? role + ' - ' : '' %>Liên hệ: <%= mobile %>">
        <meta name="twitter:image" content="<%= cardImage %>">

        <!-- Preconnect for performance -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600;700;800&display=swap"
            rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

        <!-- Structured Data for SEO -->
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "Person",
            "name": "<%= name %>",
            "jobTitle": "<%= role %>",
            "worksFor": {
                "@type": "Organization",
                "name": "<%= companyName %>"
            },
            "telephone": "<%= mobile %>",
            "email": "<%= email %>",
            "address": "<%= address %>",
            "url": "<%= website %>",
            "image": "<%= cardImage %>"
        }
        </script>

        <style>
            :root {
                --primary: #2344af;
                --primary-light: #326eb8;
                --accent: #c41e3a;
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                font-family: 'Be Vietnam Pro', sans-serif;
                background: #f0f4f8;
                min-height: 100vh;
            }

            body.dark {
                background: #0a1628;
            }

            .container {
                max-width: 480px;
                margin: 0 auto;
                background: white;
                min-height: 100vh;
                position: relative;
                box-shadow: 0 0 60px rgba(0, 0, 0, 0.08);
            }

            body.dark .container {
                background: #111827;
            }

            /* Top Header Bar */
            .top-bar {
                background: var(--primary);
                padding: 12px 16px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                position: sticky;
                top: 0;
                z-index: 100;
            }

            .top-bar-title {
                color: white;
                font-size: 14px;
                font-weight: 700;
                letter-spacing: 1px;
            }

            .top-bar-actions {
                display: flex;
                gap: 6px;
            }

            .top-bar-btn {
                background: rgba(255, 255, 255, 0.15);
                border: none;
                color: white;
                width: 34px;
                height: 34px;
                border-radius: 8px;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: background 0.2s;
            }

            .top-bar-btn:hover {
                background: rgba(255, 255, 255, 0.25);
            }

            .top-bar-btn .material-icons {
                font-size: 20px;
            }

            /* Hero Section - Like Hoa Phat */
            .hero-section {
                position: relative;
                background: linear-gradient(180deg, var(--primary) 0%, var(--primary-light) 50%);
                min-height: 280px;
                /* Tăng chiều cao lên (cũ là 200px) */
                overflow: hidden;
            }

            /* Key Visual Background */
            .key-visual-bg {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 300px;
                height: 300px;
                background-image: url('/public/uploads/company_logo/AT Energy_Key visual.png');
                background-size: contain;
                background-repeat: no-repeat;
                background-position: center;
                opacity: 0.62;
            }

            /* Hero Photo - uses background like old version */
            .hero-photo {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: transparent;
                background-repeat: no-repeat;
                z-index: 3;
            }



            /* Wave Curve */
            .wave-curve {
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 80px;
                /* Tăng độ cao sóng lên một chút cho đẹp (cũ là 60px) */
                z-index: 5;
                /* QUAN TRỌNG: Số lớn hơn photo-container */
            }

            .wave-curve svg {
                width: 100%;
                height: 100%;
                display: block;
            }

            .hero-logo {
                position: absolute;
                bottom: 15px;
                /* Cách đáy */
                right: 25px;
                /* Cách lề phải */
                width: 160px;
                /* Điều chỉnh kích thước logo */
                height: auto;
                z-index: 6;
                /* Nằm trên cùng nhất */
            }

            body.dark .logo-section {
                background: #111827;
            }

            .logo-section img {
                height: 40px;
            }

            /* Card Flip Container */
            .card-flip-container {
                perspective: 1000px;
                margin: 0 10px 24px;
            }

            .card-flip {
                position: relative;
                width: 100%;
                min-height: 190px;
                transform-style: preserve-3d;
                transition: transform 0.6s ease;
            }

            .card-flip-container.flipped .card-flip {
                transform: rotateY(180deg);
            }

            .card-front,
            .card-back {
                position: absolute;
                width: 100%;
                height: 200px;
                backface-visibility: hidden;
                -webkit-backface-visibility: hidden;
                border-radius: 10px;
                top: 0;
                left: 0;
            }

            .card-front {
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
                padding: 28px 24px;
                color: white;
                box-shadow: 0 12px 40px rgba(1, 37, 150, 0.3);
            }

            .card-back {
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
                transform: rotateY(180deg);
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                padding: 24px;
                box-shadow: 0 12px 40px rgba(1, 37, 150, 0.3);
            }

            .profile-name {
                font-size: 24px;
                font-weight: 700;
                margin-bottom: 6px;
            }

            .profile-role {
                font-size: 14px;
                font-weight: 500;
                opacity: 0.9;
                margin-bottom: 4px;
            }

            .profile-company {
                font-size: 13px;
                opacity: 0.75;
                margin-bottom: 20px;
            }

            .profile-actions {
                display: flex;
                justify-content: center;
                gap: 16px;
            }

            .profile-action {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                text-decoration: none;
                transition: all 0.2s;
                cursor: pointer;
                border: none;
            }

            .profile-action.filled {
                background: white;
                color: var(--primary);
            }

            .profile-action.outline {
                background: transparent;
                border: 2px solid rgba(255, 255, 255, 0.5);
                color: white;
            }

            .profile-action:hover {
                transform: scale(1.1);
            }

            .profile-action .material-icons {
                font-size: 24px;
            }

            /* QR Back */
            .qr-wrapper {
                background: white;
                padding: 10px;
                border-radius: 16px;
                margin-bottom: 16px;
                height: 100px;
                width: 100px;
            }

            .qr-text {
                color: white;
                font-size: 14px;
                font-weight: 500;
                margin-bottom: 12px;
            }

            .qr-back-btn {
                background: rgba(255, 255, 255, 0.2);
                border: none;
                color: white;
                padding: 10px 20px;
                border-radius: 10px;
                font-size: 12px;
                font-weight: 500;
                cursor: pointer;
                transition: background 0.2s;
            }

            .qr-back-btn:hover {
                background: rgba(255, 255, 255, 0.3);
            }

            /* Section */
            .section {
                padding: 0px 20px;
                margin-bottom: 28px;
            }

            .section-header {
                display: flex;
                align-items: center;
                gap: 10px;
                margin-bottom: 16px;
            }

            .section-bar {
                width: 4px;
                height: 20px;
                background: var(--accent);
                border-radius: 2px;
            }

            .section-title {
                font-size: 15px;
                font-weight: 700;
                color: #1e293b;
            }

            body.dark .section-title {
                color: #e2e8f0;
            }

            /* Contact Pills */
            .contact-list {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            .contact-pill {
                display: flex;
                align-items: center;
                gap: 14px;
                background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
                padding: 14px 18px;
                border-radius: 10px;
                color: white;
                text-decoration: none;
                transition: all 0.2s;
            }

            .contact-pill:hover {
                transform: translateX(6px);
                box-shadow: 0 6px 25px rgba(1, 37, 150, 0.35);
            }

            .contact-pill .material-icons {
                font-size: 20px;
                opacity: 0.9;
            }

            .contact-pill-text {
                flex: 1;
                font-size: 13px;
                font-weight: 500;
            }

            /* Video */
            .video-wrapper {
                border-radius: 16px;
                overflow: hidden;
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
            }

            .video-wrapper iframe {
                width: 100%;
                aspect-ratio: 16/9;
                border: none;
                display: block;
            }

            /* Social */
            .social-row {
                display: flex;
                justify-content: center;
                flex-wrap: wrap;
                gap: 12px;
                margin-top: 20px;
            }

            .social-btn {
                width: 44px;
                height: 44px;
                border-radius: 12px;
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                text-decoration: none;
                transition: all 0.2s;
            }

            .social-btn:hover {
                transform: scale(1.1);
            }

            .social-btn.fb {
                background: #1877F2;
            }

            .social-btn.li {
                background: #0A66C2;
            }

            .social-btn.za {
                background: #0068FF;
            }

            .social-btn.tt {
                background: #000;
            }

            .social-btn.instagram {
                background: radial-gradient(circle at 30% 30%, #feda75, #f58529 40%, #dd2a7b 60%, #8134af 80%);
            }

            .social-btn.youtube {
                background: #FF0000;
            }

            .social-btn.website {
                background: #0ea5e9;
            }

            .social-btn.generic {
                background: #0f172a;
                width: auto;
                min-width: 120px;
                height: 40px;
                padding: 0 16px;
                border-radius: 999px;
                font-size: 12px;
                font-weight: 600;
            }

            /* Footer */
            .footer {
                text-align: center;
                padding: 30px 20px 100px;
                color: #94a3b8;
                font-size: 12px;
            }

            .footer a {
                color: var(--primary);
                font-weight: 600;
                text-decoration: none;
            }

            /* Sticky Bottom */
            .sticky-bottom {
                position: fixed;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                max-width: 480px;
                width: 100%;
                padding: 12px 20px;
                background: white;
                border-top: 1px solid #e2e8f0;
                display: flex;
                gap: 12px;
                z-index: 100;
            }

            body.dark .sticky-bottom {
                background: #1f2937;
                border-color: #374151;
            }

            .save-btn {
                flex: 1;
                background: var(--primary);
                color: white;
                border: none;
                padding: 16px;
                border-radius: 12px;
                font-size: 14px;
                font-weight: 600;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
                cursor: pointer;
                transition: all 0.2s;
            }

            .save-btn:hover {
                background: var(--primary-light);
                box-shadow: 0 8px 25px rgba(1, 37, 150, 0.3);
            }

            .share-btn {
                background: var(--primary);
                color: white;
                border: none;
                width: 52px;
                height: 52px;
                border-radius: 12px;
                cursor: pointer;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.2s;
            }

            .share-btn:hover {
                background: var(--primary-light);
            }

            /* Toast Animations */
            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateX(-50%) translateY(10px);
                }

                to {
                    opacity: 1;
                    transform: translateX(-50%) translateY(0);
                }
            }

            @keyframes fadeOut {
                from {
                    opacity: 1;
                    transform: translateX(-50%) translateY(0);
                }

                to {
                    opacity: 0;
                    transform: translateX(-50%) translateY(-10px);
                }
            }

            /* Smooth interactions */
            html {
                scroll-behavior: smooth;
            }

            /* Touch feedback */
            .contact-item:active,
            .action-btn:active,
            .save-btn:active,
            .share-btn:active {
                transform: scale(0.97);
            }

            /* QR Actions */
            .qr-actions {
                display: flex;
                gap: 10px;
                justify-content: center;
                margin-top: 5px;
            }

            .qr-action-btn {
                background: none;
                border: 1px solid #ddd;
                padding: 5px 16px;
                border-radius: 20px;
                cursor: pointer;
                font-size: 13px;
                color: #ffffff;
                font-weight: 500;
                display: flex;
                align-items: center;
                transition: 0.2s;
            }

            .qr-action-btn:hover {
                background: #f8f9fa;
                border-color: #ccc;
            }

            /* QR Modal */
            .qr-modal {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.8);
                z-index: 9999;
                display: none;
                align-items: center;
                justify-content: center;
                opacity: 0;
                transition: opacity 0.3s;
            }

            .qr-modal.show {
                display: flex;
                opacity: 1;
            }

            .qr-modal-content {
                background: white;
                padding: 30px;
                border-radius: 20px;
                text-align: center;
                max-width: 90%;
                transform: scale(0.8);
                transition: transform 0.3s;
            }

            .qr-modal.show .qr-modal-content {
                transform: scale(1);
            }

            #qrcode-large img {
                display: block;
                margin: 0 auto;
            }

            .btn-close-modal {
                margin-top: 20px;
                padding: 8px 25px;
                background: #f1f1f1;
                border: none;
                border-radius: 20px;
                font-weight: 600;
                color: #333;
                cursor: pointer;
            }
        </style>
</head>

<body>
    <div class="container">
        <!-- Top Bar -->
        <div class="top-bar">
            <span class="top-bar-title"><%= companyShortName.toUpperCase() %></span>
            <div class="top-bar-actions">
                <button class="top-bar-btn" onclick="toggleCardFlip()">
                    <span class="material-icons">qr_code_2</span>
                </button>
                <button class="top-bar-btn" onclick="shareCard()">
                    <span class="material-icons">share</span>
                </button>
            </div>
        </div>

        <!-- Hero Section -->
        <div class="hero-section">
            <div class="key-visual-bg"></div>

            <div class="hero-photo" style="
                background-image: url('<%= bcard.Image || '/public/assets/default-avatar-cutout.png' %>');
                background-size: <%= imgFit || 'cover' %>;
                background-position: center <%= imgPos || 50 %>%;
            "></div>

            <div class="wave-curve">
                <svg viewBox="0 0 500 60" preserveAspectRatio="none">
                    <path d="M0,30 Q125,60 250,30 T500,30 L500,60 L0,60 Z" fill="white" />
                </svg>
            </div>

            <img class="hero-logo" src="<%= companyLogo %>" alt="<%= companyName %>">
        </div>


        <!-- Profile Card with Flip -->
        <div class="card-flip-container" id="cardFlip">
            <div class="card-flip">
                <!-- Front: Info -->
            <div class="card-front">
                <div class="profile-name">
                    <%= name %>
                </div>
                <div class="profile-role">
                    <%= role %>
                </div>
                <div class="profile-company">
                    <%= companyName %>
                </div>
                    <div class="profile-actions">
                        <a href="tel:<%= mobile %>" class="profile-action filled">
                            <span class="material-icons">call</span>
                        </a>
                        <a href="mailto:<%= email %>" class="profile-action outline">
                            <span class="material-icons-outlined">email</span>
                        </a>
                        <button class="profile-action outline" onclick="event.stopPropagation(); toggleCardFlip()">
                            <span class="material-icons">qr_code_2</span>
                        </button>
                    </div>
                </div>
                <!-- Back: QR -->
                <div class="card-back">
                    <div class="qr-wrapper">
                        <div id="qrcode"></div>
                    </div>
                    <p class="qr-text">Quét để lưu liên hệ</p>
                    <div class="qr-actions">
                        <button class="qr-action-btn" onclick="event.stopPropagation(); toggleCardFlip()">
                            <span class="material-icons" style="font-size:16px; margin-right:4px">arrow_back</span> Quay
                            lại
                        </button>
                        <button class="qr-action-btn" onclick="event.stopPropagation(); showQRZoom()">
                            <span class="material-icons" style="font-size:16px; margin-right:4px">zoom_in</span> 180x180
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- QR Zoom Modal -->
        <div id="qrModal" class="qr-modal" onclick="closeQRZoom()">
            <div class="qr-modal-content" onclick="event.stopPropagation()">
                <div id="qrcode-large"></div>
                <p style="margin-top:15px; color:#666; font-size:14px">Quét để lưu danh bạ</p>
                <button class="btn-close-modal" onclick="closeQRZoom()">Đóng</button>
            </div>
        </div>


        <!-- Contact Information -->
        <div class="section">
            <div class="section-header">
                <div class="section-bar"></div>
                <span class="section-title">Contact Information</span>
            </div>

            <div class="contact-list">
                <% if(mobile) { %>
                    <a href="tel:<%= mobile %>" class="contact-pill">
                        <span class="material-icons">call</span>
                        <span class="contact-pill-text">
                            <%= mobile.replace(/^0/, '' ) %>
                        </span>
                    </a>
                    <% } %>

                        <% if(hotline) { %>
                            <a href="tel:<%= hotline %>" class="contact-pill">
                                <span class="material-icons">call</span>
                                <span class="contact-pill-text">
                                    <%= hotline.replace(/^0/, '' ) %>
                                </span>
                            </a>
                            <% } %>

                                <a href="mailto:<%= email %>" class="contact-pill">
                                    <span class="material-icons-outlined">email</span>
                                    <span class="contact-pill-text">
                                        <%= email %>
                                    </span>
                                </a>

                                <% if(address) { %>
                                    <a href="https://maps.google.com/?q=<%= encodeURIComponent(address) %>"
                                        target="_blank" class="contact-pill">
                                        <span class="material-icons">location_on</span>
                                        <span class="contact-pill-text">
                                            <%= address %>
                                        </span>
                                    </a>
                                    <% } %>

                                        <% if(website) { %>
                                            <a href="<%= website %>" target="_blank" class="contact-pill">
                                                <span class="material-icons">language</span>
                                                <span class="contact-pill-text">
                                                    <%= website %>
                                                </span>
                                            </a>
                                            <% } %>
            </div>

            <!-- Social -->
            <% if (socialLinks.length) { %>
                <div class="social-row">
                    <% socialLinks.forEach(link => {
                        const platformKey = link.platform;
